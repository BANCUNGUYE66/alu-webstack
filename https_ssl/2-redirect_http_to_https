global
    log /dev/log    daemon
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

# --- FRONTEND for HTTPS (Port 443) ---

frontend https_front
    # Listen on Port 443, accept SSL traffic, and specify the certificate location
    bind *:443 ssl crt /etc/ssl/certs/holberton.pem
    default_backend http_back

# --- FRONTEND for HTTP (Port 80) to force redirect to HTTPS ---

frontend http_front
    bind *:80
    # Redirect all incoming HTTP requests to the HTTPS frontend
    redirect scheme https code 301 if !{ ssl_fc }

# --- BACKEND (Unencrypted connection to web servers) ---

backend http_back
    mode http
    balance roundrobin

    # Check if servers are healthy every 2 seconds
    # NOTE: Since the connection to the backend is unencrypted, the servers
    # must be configured to accept traffic on Port 80.
    server web01 WEB_01_IP:80 check inter 2000 rise 2 fall 3
    server web02 WEB_02_IP:80 check inter 2000 rise 2 fall 3
